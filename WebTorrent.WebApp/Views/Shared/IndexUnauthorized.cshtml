
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutUnauthorized.cshtml";
}

<!-- ko with: account -->
<div ng-controller="accountCtrl" class="login-form" method="post">
    <h3 class="form-title">
        Login to your account
    </h3>
    <div ng-show="hasErrors()" class="alert alert-danger ">
        <h4 style="margin-bottom: 0px;" >Login error</h4>
        <span ng-repeat="item in commonErrors">{{item}}</span>
    </div>
    <!-- ko with: fields -->
    <!-- ko with: Name -->
    <div  class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Username</label>
        <div class="input-icon">
            <i class="fa fa-user"></i>
            <input ng-model="userName" class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" />
        </div>
        <span ng-show="userNameHasError" class="help-block hidden-if-no-error">
            <span ng-repeat="item in userNameErrors">{{item.ErrorMessage}}</span>
        </span>
    </div>
    <!-- /ko -->
    <!-- ko with: Password -->
    <div  class="form-group">
        <label class="control-label visible-ie8 visible-ie9">Password</label>
        <div class="input-icon">
            <i class="fa fa-lock"></i>
            <input ng-model="password" class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />
        </div>
        <span ng-show="passwordHasError" class="help-block hidden-if-no-error">
            <span ng-repeat="item in passwordErrors">{{item.ErrorMessage}}</span>
        </span>
    </div>
    <!-- /ko -->
    <!-- /ko -->
    <div style="border-bottom: none;" class="form-actions">
        <label style="margin-left: 22px" class="checkbox">
            <input ng-model="rememberMe" type="checkbox" name="remember" value="1" /> Remember me
        </label>
        <button ng-click="login()" type="button" class="btn green pull-right login-button">
            Login <i class="m-icon-swapright m-icon-white"></i>
        </button>
    </div>
</div>
<!-- /ko -->
